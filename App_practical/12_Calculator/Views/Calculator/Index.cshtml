@model List<_12_Calculator.Data.DataInputVariant>

@{
    ViewData["Title"] = "Очень простой калькулятор";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-controller="Calculator" asp-action="Index">
    @Html.AntiForgeryToken()
    <input type="text" name="num1" required />
    <select name="operation" required>
        <option value="Add">+</option>
        <option value="Subtract">-</option>
        <option value="Multiply">*</option>
        <option value="Divide">/</option>
    </select>
    <input type="text" name="num2" required />
    <input type="submit" value="Рассчитать" />
</form>

@if (ViewBag.Result != null && !string.IsNullOrEmpty(ViewBag.Result.ToString()))
{
    <p>Результат операции: @ViewBag.Result</p>
}
